<table>

  <tr>
    <th>Date</th>
    <th>Received from</th>
    <th>Amount</th>
  </tr>
  <% @account.deposits.each do |deposit| %>
  <tr>
  <td><%= deposit.date %></td>
  <td class = "name"><%= deposit.from %></td>
  <td><%= number_to_currency(deposit.amount) %></td>
  <td><%= link_to "delete", deposit, method: :delete, data: {confirm: "Are you sure?"}, class: "button" %></td>
  </tr>
  <% end %>
</table>